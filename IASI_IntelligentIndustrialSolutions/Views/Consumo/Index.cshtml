@model IEnumerable<IASI_IntelligentIndustrialSolutions.Models.Consumo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnidadeMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmissaoGas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadeMedida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmissaoGas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipamento.Estado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdConsumo" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdConsumo" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdConsumo" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
